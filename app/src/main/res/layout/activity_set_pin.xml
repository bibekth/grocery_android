<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:padding="8dp"
    tools:context=".SetPinActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:contentDescription="@string/logo_description"
        android:background="@drawable/logo"
        android:layout_marginTop="64dp"
        android:layout_marginStart="112dp"
        android:layout_marginEnd="112dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvWelcomeTo"
        android:text="@string/welcome_to"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:textColor="#0047AB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvAppName"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#0047AB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="36dp"
        android:id="@+id/llInputSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvFourDigitPin"
            android:text="@string/enter_four_digit"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="numberPassword"
            android:autofillHints="phone"
            android:textColorHint="#545454"
            android:textColor="@color/black"
            android:hint="@string/hash_pin"
            android:background="@drawable/input_shape"
            android:labelFor="@id/tvFourDigitPin"
            android:layout_marginTop="4dp"
            android:id="@+id/etFourDigitPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvReEnterPin"
            android:text="@string/re_enter_your_pin"
            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="numberPassword"
            android:autofillHints="password"
            android:textColorHint="#545454"
            android:textColor="@color/black"
            android:hint="@string/hash_pin"
            android:background="@drawable/input_shape"
            android:labelFor="@id/tvReEnterPin"
            android:layout_marginTop="4dp"
            android:id="@+id/etReEnterPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSave"
            android:text="@string/save"
            android:layout_marginTop="36dp"
            android:background="@drawable/submit_btn_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAllRights"
            android:text="@string/all_rights_preserved"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>