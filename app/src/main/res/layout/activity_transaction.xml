<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF723CB6"
    tools:context=".TransactionActivity">

    <RelativeLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/logo"
                android:contentDescription="@string/profilePicture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.523" />

            <ImageView
                android:id="@+id/ivNotification"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:background="@drawable/notification"
                android:contentDescription="@string/notificationIcon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>


    <LinearLayout
        android:background="#FFFFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/make_a_transaction"
            android:textSize="20sp"
            android:padding="16dp"
            android:textColor="#444444"
            android:background="#88888888"
            android:layout_width="match_parent"
            android:layout_height="64dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="text"
                android:autofillHints="phone"
                android:id="@+id/etCustomer"
                android:hint="@string/enter_the_phone_number"
                android:textColorHint="#868686"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_weight="1"
                android:background="@drawable/input_shape"
                android:layout_width="0dp"
                android:layout_height="48dp"/>
            <ImageView
                android:id="@+id/ivAdd"
                android:src="@drawable/add_icon"
                android:contentDescription="@string/todo"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:visibility="gone"
            android:padding="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/llDetail"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etProduct"
                android:layout_width="0dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_height="match_parent"
                android:autofillHints="name"
                android:hint="@string/product"
                android:inputType="text"
                android:background="@drawable/underline_input"
                android:textColor="@color/black"
                android:textColorHint="#868686"
                android:layout_weight="1"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etQuantity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:autofillHints="name"
                android:hint="@string/qty"
                android:inputType="phone"
                android:gravity="center"
                android:background="@drawable/underline_input"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/black"
                android:textColorHint="#868686"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvPrice"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Rs. 1200"
                android:textSize="16sp"
                android:layout_width="80dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/ivRemove"
                android:src="@drawable/add_icon"
                android:contentDescription="@string/todo"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcProductPrice"
            android:visibility="gone"
            android:padding="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnSave"
            android:text="@string/save"
            android:layout_marginTop="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/white"
            android:background="@drawable/submit_btn_shape"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
    </LinearLayout>
</LinearLayout>